<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>
<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="Control.MainController"
           prefHeight="400.0" prefWidth="600.0">
    <Label text="Welcome to Aeroplane!"
           StackPane.alignment="TOP_CENTER">
        <StackPane.margin>
            <Insets top="20.0"/>
        </StackPane.margin>
        <font>
            <Font size="40.0"/>
        </font>
    </Label>
    <VBox alignment="BOTTOM_CENTER" spacing="20">
        <StackPane.margin>
            <Insets bottom="40"></Insets>
        </StackPane.margin>
        <Button fx:id="startBtn" text="Start" prefHeight="30" prefWidth="100"></Button>
        <Button fx:id="LoadBtn" text="Load Game" prefHeight="30" prefWidth="100"></Button>
    </VBox>
</StackPane>
